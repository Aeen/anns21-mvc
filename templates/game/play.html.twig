{% extends 'base.html.twig' %}

{% block title %}Black Jack{% endblock %}

{% block body %}

<h1>Black Jack</h1>

{{ include('./game/navbar.html.twig') }}

<div class="card-container-play">

    <div class="flash-messages-game">
        {{ include('block/flash-message.html.twig') }}     
    </div>
    
    <div class="card-container">
        <h2>Dealers hand</h2>
    </div>
    <div class="card-container">
        <h4>({{ dealerScore }})</h4>
    </div>
    <div class="card-container">
        {% if dealerHand is defined %}
            {% for cards in dealerHand %}
                <div class="cards">
                    <div class="{{ cards }} left-card">
                        {{ cards }}
                    </div>
                    <div class="{{ cards }} right-card">
                        {{ cards }}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>

    <div class="card-container">
        <h2>Players hand</h2>
    </div>
    <div class="card-container">
        <h4>({{ playerScore }})</h4>
    </div>
    <div class="card-container">
        {% if playerHand is defined %}
            {% for cards in playerHand %}
                <div class="cards">
                    <div class="{{ cards }} left-card">
                        {{ cards }}
                    </div>
                    <div class="{{ cards }} right-card">
                        {{ cards }}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>

<div class="card-container button-play">
    <form method="post">
        <input type="submit" name="reset" value="Start/Reset">
        <input type="submit" name="hit" value="Hit">
        <input type="submit" name="stand" value="Stand">
    </form>
</div>

</div>

{% endblock %}