{% extends 'project.html.twig' %}

{% block title %}Update book{% endblock %}

{% block body %}

<h1>Update room</h1>

{{ include('./room/navbar.html.twig') }}

{# read and display all flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-{{ label }} center">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}


{% if rooms is defined %}
{% for room in rooms %}

<div class="update-container">

<form method="post">
    <fieldset>
    <legend>Update Room</legend>
    <p>
        <label>Id:<br>
            <input type="text" name="id" value="{{ room.id }}" readonly>
        </label>
    </p>
    <p>
        <label>Name:<br>
            <input type="text" name="name" value="{{ room.name }}">
        </label>
    </p>
    <p>
        <label>Description:<br>
            <input type="text" name="description" value="{{ room.description }}">
        </label>
    </p>
    <p>
        <label>Image:<br>
            <input type="text" name="image" value="{{ room.image }}">
        </label>
    </p>
    <p>
        <label>Blur:<br>
            <input type="text" name="blur" value="{{ room.blur }}">
        </label>
    </p>
    <p>
        <label>Back:<br>
            <input type="text" name="back" value="{{ room.back }}">
        </label>
    </p>
    <p>
        <label>Forward1:<br>
            <input type="text" name="forward1" value="{{ room.forward1 }}">
        </label>
    </p>
    <p>
        <label>Forward2:<br>
            <input type="text" name="forward2" value="{{ room.forward2 }}">
        </label>
    </p>
    <p>
        <label>Action1:<br>
            <input type="text" name="action1" value="{{ room.action1 }}">
        </label>
    </p>
    <p>
        <label>Action2:<br>
            <input type="text" name="action2" value="{{ room.action2 }}">
        </label>
    </p>
    <p>
        <input type="submit" value="Spara">
    </p>
    </fieldset>
</form>

</div>

{% endfor %}
{% endif %}



{% endblock %}