{% if deck is defined %}
{% set count = 1 %}
{% for players in deck %}
<div class="message-player">
    <h2>Player {{ count }}</h2>
</div>
{% set count = count + 1 %}
    <div class="card-container">
        {% for cards in players %}
            <div class="cards">
                    <div class="{{ cards }} left-card">
                      {{ cards }}
                    </div>
                    <div class="{{ cards }} right-card">
                       {{ cards }}
                    </div>
            </div>
        {% endfor %}
    </div>
    {% endfor %}
{% endif %}

